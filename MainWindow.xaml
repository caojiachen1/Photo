<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Photo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Photo"
    xmlns:controls="using:Photo.Controls"
    xmlns:converters="using:Photo.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{x:Bind ViewModel.WindowTitle, Mode=OneWay}">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" Background="Transparent" KeyDown="RootGrid_KeyDown">
        <Grid.Resources>
            <converters:StringVisibilityConverter x:Key="StringVisibilityConverter"/>
            <!-- 使用 Segoe Fluent Icons 字体让图标更圆润统一 -->
            <Style TargetType="FontIcon">
                <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
            </Style>
            
            <ControlTemplate x:Key="NavButtonTemplate" TargetType="Button">
                <Grid Background="Transparent">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Target="ContentGrid.Background" Value="#19FFFFFF" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Target="ContentGrid.Background" Value="#33FFFFFF" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                    
                    <Grid x:Name="ContentGrid" 
                          Width="40" Height="40" 
                          CornerRadius="20" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition x:Name="ThumbnailRow" Height="Auto"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Grid x:Name="TopToolbar" Grid.Row="0" Background="#1F1F1F" Visibility="{x:Bind ViewModel.ToolbarVisibility, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧按钮组 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4" Margin="8,0,0,0" VerticalAlignment="Center">
                <!-- 旋转按钮 -->
                <Button x:Name="TopRotateButton" ToolTipService.ToolTip="旋转" Command="{x:Bind ViewModel.RotateCommand}">
                    <FontIcon Glyph="&#xE7AD;" FontSize="16"/>
                </Button>

                <!-- 删除按钮 -->
                <Button x:Name="DeleteButton" ToolTipService.ToolTip="删除" Command="{x:Bind ViewModel.DeleteCommand}" Margin="4,0,0,0">
                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                </Button>

                <!-- 更多操作菜单 -->
                <Button x:Name="MoreActionsButton" ToolTipService.ToolTip="更多操作" Margin="4,0,0,0">
                    <FontIcon Glyph="&#xE712;" FontSize="16"/>
                    <Button.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem x:Name="SaveAsMenuItem" Text="另存为" Command="{x:Bind ViewModel.SaveAsCommand}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE792;"/>
                                </MenuFlyoutItem.Icon>
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Modifiers="Control,Shift" Key="S"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="CopyMenuItem" Text="复制" Command="{x:Bind ViewModel.CopyCommand}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8C8;"/>
                                </MenuFlyoutItem.Icon>
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Modifiers="Control" Key="C"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="OpenInExplorerMenuItem" Text="在文件资源管理器中打开" Command="{x:Bind ViewModel.OpenInExplorerCommand}">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xEC50;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="SettingsMenuItem" Text="设置" Click="SettingsButton_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE713;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>

            <!-- 中间文件名 -->
            <TextBlock x:Name="FileNameText" Grid.Column="1" 
                       Text="{x:Bind ViewModel.FileName, Mode=OneWay}" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="14"/>

            <!-- 右侧占位，保持文件名居中 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0" IsHitTestVisible="False">
                <Button>
                    <FontIcon Glyph="&#xE7AD;" FontSize="16"/>
                </Button>
                <Button Margin="4,0,0,0">
                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 中间图片显示区域 -->
        <Grid x:Name="ImageContainerGrid" Grid.Row="1" Background="#1F1F1F"
              PointerWheelChanged="ImageContainer_PointerWheelChanged"
              PointerPressed="ImageContainer_PointerPressed"
              PointerMoved="ImageContainer_PointerMoved"
              PointerReleased="ImageContainer_PointerReleased"
              PointerCaptureLost="ImageContainer_PointerCaptureLost"
              PointerEntered="ImageContainer_PointerEntered"
              PointerExited="ImageContainer_PointerExited">
            
            <!-- 左右切换按钮 -->
            <Button x:Name="PreviousButton"
                    Template="{StaticResource NavButtonTemplate}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Margin="0"
                    Width="60"
                    Command="{x:Bind ViewModel.NavigatePreviousCommand}"
                    Visibility="{x:Bind ViewModel.PreviousButtonVisibility, Mode=OneWay}"
                    Canvas.ZIndex="10">
                <FontIcon Glyph="&#xE76B;" FontSize="20"/>
            </Button>

            <Button x:Name="NextButton"
                    Template="{StaticResource NavButtonTemplate}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Margin="0"
                    Width="60"
                    Command="{x:Bind ViewModel.NavigateNextCommand}"
                    Visibility="{x:Bind ViewModel.NextButtonVisibility, Mode=OneWay}"
                    Canvas.ZIndex="10">
                <FontIcon Glyph="&#xE76C;" FontSize="20"/>
            </Button>

            <ScrollViewer x:Name="ImageScrollViewer" 
                          ZoomMode="Disabled"
                          HorizontalScrollMode="Disabled"
                          VerticalScrollMode="Disabled"
                          HorizontalScrollBarVisibility="Hidden"
                          VerticalScrollBarVisibility="Hidden"
                          MinZoomFactor="0.1"
                          MaxZoomFactor="10"
                          ViewChanged="ImageScrollViewer_ViewChanged"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          IsHitTestVisible="True">
                <Grid x:Name="ImageContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="MainImage" 
                           Source="{x:Bind ViewModel.ImageSource, Mode=OneWay}"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5"
                           SizeChanged="MainImage_SizeChanged">
                        <Image.RenderTransform>
                            <RotateTransform x:Name="ImageRotateTransform" Angle="0"/>
                        </Image.RenderTransform>
                    </Image>
                    
                    <!-- 人脸区域覆盖层 -->
                    <Canvas x:Name="FaceOverlayCanvas" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            IsHitTestVisible="True"/>
                </Grid>
            </ScrollViewer>

            <!-- 无图片时的占位符 -->
            <StackPanel x:Name="PlaceholderPanel" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Visibility="{x:Bind ViewModel.PlaceholderVisibility, Mode=OneWay}">
                <FontIcon Glyph="&#xEB9F;" FontSize="120" Foreground="#4A4A6A"/>
                <TextBlock Text="拖放图片到此处或使用文件打开" 
                           Foreground="#888888" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 缩略图条 -->
        <Grid x:Name="ThumbnailBar" Grid.Row="2" Background="#252525" Height="88" Visibility="{x:Bind ViewModel.ThumbnailBarVisibility, Mode=OneWay}">
            <!-- 缩略图列表 -->
            <ListView x:Name="ThumbnailListView" 
                      ItemsSource="{x:Bind ViewModel.ThumbnailItems}"
                      SelectionMode="Single"
                      SelectionChanged="ThumbnailListView_SelectionChanged"
                      ScrollViewer.HorizontalScrollMode="Enabled"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollMode="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      PointerWheelChanged="ThumbnailListView_PointerWheelChanged"
                      Padding="8,4"
                      Margin="0">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="0"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="MinWidth" Value="0"/>
                        <Setter Property="MinHeight" Value="0"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:ThumbnailItem">
                        <Grid Width="80" Height="80" 
                                CornerRadius="4" 
                                Background="#1A1A1A"
                                BorderBrush="{x:Bind BorderBrush, Mode=OneWay}"
                                BorderThickness="2"
                                Margin="0,0,0,6">
                            <Image Source="{x:Bind Thumbnail, Mode=OneWay}" 
                                    Stretch="Uniform"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0"/>
                            <!-- 加载中指示器 -->
                            <ProgressRing IsActive="{x:Bind IsLoading, Mode=OneWay}" 
                                          Width="20" Height="20"
                                          Visibility="{x:Bind IsLoading, Mode=OneWay}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- 底部状态栏 -->
        <Grid x:Name="BottomStatusBar" Grid.Row="3" Background="#2D2D2D" Visibility="{x:Bind ViewModel.ToolbarVisibility, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧信息 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" Margin="12,0,0,0" VerticalAlignment="Center">
                <!-- 缩略图切换按钮 -->
                <Button x:Name="ThumbnailToggleButton" ToolTipService.ToolTip="{x:Bind ViewModel.ThumbnailToggleTooltip, Mode=OneWay}" Background="Transparent" BorderBrush="Transparent" Padding="4" Command="{x:Bind ViewModel.ToggleThumbnailBarCommand}">
                    <FontIcon x:Name="ThumbnailToggleIcon" Glyph="{x:Bind ViewModel.ThumbnailToggleIcon, Mode=OneWay}" FontSize="14"/>
                </Button>

                <!-- 文件信息按钮 -->
                <Button x:Name="FileInfoButton" ToolTipService.ToolTip="文件信息" Background="Transparent" BorderBrush="Transparent" Padding="4" Command="{x:Bind ViewModel.ToggleFileInfoCommand}">
                    <FontIcon Glyph="&#xE946;" FontSize="14"/>
                </Button>

                <!-- 图片尺寸 -->
                <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE91B;" FontSize="12" Foreground="#888888"/>
                    <TextBlock x:Name="ImageDimensionsText" Text="{x:Bind ViewModel.ImageDimensions, Mode=OneWay}" Foreground="#888888" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 文件大小 -->
                <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE7C3;" FontSize="12" Foreground="#888888"/>
                    <TextBlock x:Name="FileSizeText" Text="{x:Bind ViewModel.FileSize, Mode=OneWay}" Foreground="#888888" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- 右侧缩放控制 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" Margin="0,0,12,0" VerticalAlignment="Center">
                <!-- 旋转按钮 -->
                <Button x:Name="RotateButton" ToolTipService.ToolTip="旋转" Background="Transparent" BorderBrush="Transparent" Padding="4" Command="{x:Bind ViewModel.RotateCommand}">
                    <FontIcon Glyph="&#xE7AD;" FontSize="14"/>
                </Button>

                <!-- 分隔线 -->
                <Border Width="1" Height="20" Background="#444444" Margin="8,0"/>

                <!-- 适应窗口 -->
                <Button x:Name="FitToWindowButton" ToolTipService.ToolTip="适应窗口" Background="Transparent" BorderBrush="Transparent" Padding="4" Command="{x:Bind ViewModel.FitToWindowCommand}">
                    <FontIcon Glyph="&#xE73F;" FontSize="14"/>
                </Button>

                <!-- 实际大小 (改为显示 1:1 文本，表示实际尺寸) -->
                <Button x:Name="ActualSizeButton" ToolTipService.ToolTip="实际大小 (1:1)" Background="Transparent" BorderBrush="Transparent" Padding="4" Command="{x:Bind ViewModel.ActualSizeCommand}">
                    <TextBlock Text="1:1" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                </Button>

                <!-- 分隔线 -->
                <Border Width="1" Height="20" Background="#444444" Margin="8,0"/>

                <!-- 缩放百分比下拉菜单 -->
                <DropDownButton x:Name="ZoomButton" ToolTipService.ToolTip="缩放" MinWidth="60" Background="Transparent" BorderBrush="Transparent">
                    <TextBlock x:Name="ZoomPercentText" Text="{x:Bind ViewModel.ZoomPercent, Mode=OneWay}" FontSize="12"/>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Top">
                            <MenuFlyoutItem Text="适应窗口" Command="{x:Bind ViewModel.FitToWindowCommand}"/>
                            <MenuFlyoutItem Text="实际大小 (100%)" Command="{x:Bind ViewModel.ActualSizeCommand}"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="25%" Command="{x:Bind ViewModel.Zoom25Command}"/>
                            <MenuFlyoutItem Text="50%" Command="{x:Bind ViewModel.Zoom50Command}"/>
                            <MenuFlyoutItem Text="100%" Command="{x:Bind ViewModel.Zoom100Command}"/>
                            <MenuFlyoutItem Text="200%" Command="{x:Bind ViewModel.Zoom200Command}"/>
                            <MenuFlyoutItem Text="400%" Command="{x:Bind ViewModel.Zoom400Command}"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <!-- 缩小按钮 -->
                <Button x:Name="ZoomOutButton" ToolTipService.ToolTip="缩小" Background="Transparent" BorderBrush="Transparent" Padding="4" Command="{x:Bind ViewModel.ZoomOutCommand}" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE71F;" FontSize="14"/>
                </Button>

                <!-- 缩放滑块 -->
                <Slider x:Name="ZoomSlider" 
                        Width="120" 
                        Minimum="10" 
                        Maximum="400" 
                        Value="{x:Bind ViewModel.ZoomSliderValue, Mode=TwoWay}" 
                        VerticalAlignment="Center"
                        ValueChanged="ZoomSlider_ValueChanged"/>

                <!-- 放大按钮 -->
                <Button x:Name="ZoomInButton" ToolTipService.ToolTip="放大" Background="Transparent" BorderBrush="Transparent" Padding="4" Command="{x:Bind ViewModel.ZoomInCommand}" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE8A3;" FontSize="14"/>
                </Button>

                <!-- 分隔线 -->
                <Border Width="1" Height="20" Background="#444444" Margin="8,0"/>

                <!-- 全屏按钮 -->
                <Button x:Name="FullScreenButton" 
                        ToolTipService.ToolTip="{x:Bind ViewModel.FullScreenTooltip, Mode=OneWay}" 
                        Background="Transparent" 
                        BorderBrush="Transparent" 
                        Padding="4" 
                        Command="{x:Bind ViewModel.ToggleFullScreenCommand}"
                        VerticalAlignment="Center">
                    <FontIcon x:Name="FullScreenIcon" Glyph="{x:Bind ViewModel.FullScreenIcon, Mode=OneWay}" FontSize="14"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 文件信息弹出面板 -->
        <Grid x:Name="FileInfoPanel" Grid.Row="1" Grid.RowSpan="2" 
              HorizontalAlignment="Right" 
              VerticalAlignment="Stretch"
              Width="320"
              Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
              Visibility="{x:Bind ViewModel.FileInfoPanelVisibility, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Padding="16,12">
                <TextBlock Text="文件信息" FontSize="16" FontWeight="SemiBold"/>
                <Button HorizontalAlignment="Right" 
                        Background="Transparent" 
                        BorderBrush="Transparent" 
                        Command="{x:Bind ViewModel.CloseFileInfoCommand}"
                        Padding="4">
                    <FontIcon Glyph="&#xE711;" FontSize="12"/>
                </Button>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Padding="16,0,16,16" Spacing="16">
                    <!-- 文件名 -->
                    <StackPanel>
                        <TextBlock Text="文件名" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoFileName" Text="{x:Bind ViewModel.InfoFileName, Mode=OneWay}" FontSize="14" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 文件路径 -->
                    <StackPanel>
                        <TextBlock Text="位置" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoFilePath" Text="{x:Bind ViewModel.InfoFilePath, Mode=OneWay}" FontSize="14" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 文件类型 -->
                    <StackPanel>
                        <TextBlock Text="类型" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoFileType" Text="{x:Bind ViewModel.InfoFileType, Mode=OneWay}" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 尺寸 -->
                    <StackPanel>
                        <TextBlock Text="尺寸" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoDimensions" Text="{x:Bind ViewModel.InfoDimensions, Mode=OneWay}" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 文件大小 -->
                    <StackPanel>
                        <TextBlock Text="大小" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoFileSize" Text="{x:Bind ViewModel.InfoFileSize, Mode=OneWay}" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 创建日期 -->
                    <StackPanel>
                        <TextBlock Text="创建日期" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoCreatedDate" Text="{x:Bind ViewModel.InfoCreatedDate, Mode=OneWay}" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 修改日期 -->
                    <StackPanel>
                        <TextBlock Text="修改日期" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoModifiedDate" Text="{x:Bind ViewModel.InfoModifiedDate, Mode=OneWay}" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 拍摄时间 -->
                    <StackPanel Visibility="{Binding InfoDateTimeOriginal, Converter={StaticResource StringVisibilityConverter}}">
                        <TextBlock Text="拍摄时间" Foreground="#888888" FontSize="12"/>
                        <TextBlock Text="{x:Bind ViewModel.InfoDateTimeOriginal, Mode=OneWay}" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 相机型号 -->
                    <StackPanel Visibility="{Binding InfoCameraModel, Converter={StaticResource StringVisibilityConverter}}">
                        <TextBlock Text="相机型号" Foreground="#888888" FontSize="12"/>
                        <TextBlock Text="{x:Bind ViewModel.InfoCameraModel, Mode=OneWay}" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 拍摄参数 -->
                    <StackPanel Visibility="{Binding InfoFNumber, Converter={StaticResource StringVisibilityConverter}}">
                        <TextBlock Text="拍摄参数" Foreground="#888888" FontSize="12"/>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                            <TextBlock Text="{x:Bind ViewModel.InfoFNumber, Mode=OneWay}" FontSize="14"/>
                            <TextBlock Text="{x:Bind ViewModel.InfoExposureTime, Mode=OneWay}" FontSize="14"/>
                            <TextBlock Text="{x:Bind ViewModel.InfoISO, Mode=OneWay}" FontSize="14"/>
                            <TextBlock Text="{x:Bind ViewModel.InfoFocalLength, Mode=OneWay}" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 关键词 -->
                    <StackPanel Visibility="{Binding InfoKeywords, Converter={StaticResource StringVisibilityConverter}}">
                        <TextBlock Text="关键词" Foreground="#888888" FontSize="12"/>
                        <TextBlock Text="{x:Bind ViewModel.InfoKeywords, Mode=OneWay}" FontSize="14" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 人物 -->
                    <StackPanel Visibility="{Binding InfoPeople, Converter={StaticResource StringVisibilityConverter}}">
                        <TextBlock Text="人物" Foreground="#888888" FontSize="12"/>
                        <TextBlock Text="{x:Bind ViewModel.InfoPeople, Mode=OneWay}" FontSize="14" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
