<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Photo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Photo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Photo">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid" Background="Transparent" KeyDown="RootGrid_KeyDown">
        <Grid.Resources>
            <ControlTemplate x:Key="NavButtonTemplate" TargetType="Button">
                <Grid Background="Transparent">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Target="ContentGrid.Background" Value="#19FFFFFF" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Target="ContentGrid.Background" Value="#33FFFFFF" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                    
                    <Grid x:Name="ContentGrid" 
                          Width="40" Height="40" 
                          CornerRadius="20" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
            </ControlTemplate>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Grid Grid.Row="0" Background="#1F1F1F">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧按钮组 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4" Margin="8,0,0,0" VerticalAlignment="Center">
                <!-- 旋转按钮 -->
                <Button x:Name="TopRotateButton" ToolTipService.ToolTip="旋转" Click="RotateButton_Click">
                    <FontIcon Glyph="&#xE7AD;" FontSize="16"/>
                </Button>

                <!-- 删除按钮 -->
                <Button x:Name="DeleteButton" ToolTipService.ToolTip="删除" Click="DeleteButton_Click" Margin="4,0,0,0">
                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                </Button>
            </StackPanel>

            <!-- 中间文件名 -->
            <TextBlock x:Name="FileNameText" Grid.Column="1" 
                       Text="" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       FontSize="14"/>

            <!-- 右侧占位，保持文件名居中 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0" IsHitTestVisible="False">
                <Button>
                    <FontIcon Glyph="&#xE7AD;" FontSize="16"/>
                </Button>
                <Button Margin="4,0,0,0">
                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 中间图片显示区域 -->
        <Grid x:Name="ImageContainerGrid" Grid.Row="1" Background="#1F1F1F"
              PointerWheelChanged="ImageContainer_PointerWheelChanged"
              PointerPressed="ImageContainer_PointerPressed"
              PointerMoved="ImageContainer_PointerMoved"
              PointerReleased="ImageContainer_PointerReleased"
              PointerCaptureLost="ImageContainer_PointerCaptureLost"
              PointerEntered="ImageContainer_PointerEntered"
              PointerExited="ImageContainer_PointerExited">
            
            <!-- 左右切换按钮 -->
            <Button x:Name="PreviousButton"
                    Template="{StaticResource NavButtonTemplate}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Margin="0"
                    Width="60"
                    Click="PreviousButton_Click"
                    Visibility="Collapsed"
                    Canvas.ZIndex="10">
                <FontIcon Glyph="&#xE76B;" FontSize="20"/>
            </Button>

            <Button x:Name="NextButton"
                    Template="{StaticResource NavButtonTemplate}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Margin="0"
                    Width="60"
                    Click="NextButton_Click"
                    Visibility="Collapsed"
                    Canvas.ZIndex="10">
                <FontIcon Glyph="&#xE76C;" FontSize="20"/>
            </Button>

            <ScrollViewer x:Name="ImageScrollViewer" 
                          ZoomMode="Disabled"
                          HorizontalScrollMode="Enabled"
                          VerticalScrollMode="Enabled"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          MinZoomFactor="0.1"
                          MaxZoomFactor="10"
                          ViewChanged="ImageScrollViewer_ViewChanged"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          IsHitTestVisible="False">
                <Image x:Name="MainImage" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="ImageRotateTransform" Angle="0"/>
                    </Image.RenderTransform>
                </Image>
            </ScrollViewer>

            <!-- 无图片时的占位符 -->
            <StackPanel x:Name="PlaceholderPanel" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Visibility="Visible">
                <FontIcon Glyph="&#xEB9F;" FontSize="120" Foreground="#4A4A6A"/>
                <TextBlock Text="拖放图片到此处或使用文件打开" 
                           Foreground="#888888" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

        <!-- 底部状态栏 -->
        <Grid Grid.Row="2" Background="#2D2D2D">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧信息 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" Margin="12,0,0,0" VerticalAlignment="Center">
                <!-- 文件信息按钮 -->
                <Button x:Name="FileInfoButton" ToolTipService.ToolTip="文件信息" Background="Transparent" BorderBrush="Transparent" Padding="4" Click="FileInfoButton_Click">
                    <FontIcon Glyph="&#xE946;" FontSize="14"/>
                </Button>

                <!-- 图片尺寸 -->
                <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE91B;" FontSize="12" Foreground="#888888"/>
                    <TextBlock x:Name="ImageDimensionsText" Text="" Foreground="#888888" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 文件大小 -->
                <StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                    <FontIcon Glyph="&#xE7C3;" FontSize="12" Foreground="#888888"/>
                    <TextBlock x:Name="FileSizeText" Text="" Foreground="#888888" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- 右侧缩放控制 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" Margin="0,0,12,0" VerticalAlignment="Center">
                <!-- 旋转按钮 -->
                <Button x:Name="RotateButton" ToolTipService.ToolTip="旋转" Background="Transparent" BorderBrush="Transparent" Padding="4" Click="RotateButton_Click">
                    <FontIcon Glyph="&#xE7AD;" FontSize="14"/>
                </Button>

                <!-- 分隔线 -->
                <Border Width="1" Height="20" Background="#444444" Margin="8,0"/>

                <!-- 适应窗口 -->
                <Button x:Name="FitToWindowButton" ToolTipService.ToolTip="适应窗口" Background="Transparent" BorderBrush="Transparent" Padding="4" Click="FitToWindow_Click">
                    <FontIcon Glyph="&#xE73F;" FontSize="14"/>
                </Button>

                <!-- 实际大小 (改为显示 1:1 文本，表示实际尺寸) -->
                <Button x:Name="ActualSizeButton" ToolTipService.ToolTip="实际大小 (1:1)" Background="Transparent" BorderBrush="Transparent" Padding="4" Click="ActualSize_Click">
                    <TextBlock Text="1:1" FontSize="12" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
                </Button>

                <!-- 缩放控制 -->
                <DropDownButton x:Name="ZoomButton" ToolTipService.ToolTip="缩放" MinWidth="70">
                    <TextBlock x:Name="ZoomPercentText" Text="100%"/>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Top">
                            <MenuFlyoutItem Text="适应窗口" Click="FitToWindow_Click"/>
                            <MenuFlyoutItem Text="实际大小 (100%)" Click="ActualSize_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="25%" Click="Zoom25_Click"/>
                            <MenuFlyoutItem Text="50%" Click="Zoom50_Click"/>
                            <MenuFlyoutItem Text="100%" Click="Zoom100_Click"/>
                            <MenuFlyoutItem Text="200%" Click="Zoom200_Click"/>
                            <MenuFlyoutItem Text="400%" Click="Zoom400_Click"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
        </Grid>

        <!-- 文件信息弹出面板 -->
        <Grid x:Name="FileInfoPanel" Grid.Row="1" 
              HorizontalAlignment="Right" 
              VerticalAlignment="Stretch"
              Width="320"
              Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Padding="16,12">
                <TextBlock Text="文件信息" FontSize="16" FontWeight="SemiBold"/>
                <Button HorizontalAlignment="Right" 
                        Background="Transparent" 
                        BorderBrush="Transparent" 
                        Click="CloseFileInfoPanel_Click"
                        Padding="4">
                    <FontIcon Glyph="&#xE711;" FontSize="12"/>
                </Button>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Padding="16,0,16,16" Spacing="16">
                    <!-- 文件名 -->
                    <StackPanel>
                        <TextBlock Text="文件名" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoFileName" Text="" FontSize="14" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 文件路径 -->
                    <StackPanel>
                        <TextBlock Text="位置" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoFilePath" Text="" FontSize="14" TextWrapping="Wrap" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 文件类型 -->
                    <StackPanel>
                        <TextBlock Text="类型" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoFileType" Text="" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 尺寸 -->
                    <StackPanel>
                        <TextBlock Text="尺寸" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoDimensions" Text="" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 文件大小 -->
                    <StackPanel>
                        <TextBlock Text="大小" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoFileSize" Text="" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 创建日期 -->
                    <StackPanel>
                        <TextBlock Text="创建日期" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoCreatedDate" Text="" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- 修改日期 -->
                    <StackPanel>
                        <TextBlock Text="修改日期" Foreground="#888888" FontSize="12"/>
                        <TextBlock x:Name="InfoModifiedDate" Text="" FontSize="14" Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
